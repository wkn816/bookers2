 <link rel="stylesheet" href="books.scss" />

<div class = "container">
 <div class = "row">

<%= render 'books/list', book: @book, user: @user %>


<div class = "col-md-8 offset-md-1">
    <h1>Books</h1>
      <table class="table table-hover table-inverse">

<thead>
  <tr>
     <th></th>
     <th>title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
  </tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
  <th><span><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg"), user_path(book.user_id) %></span></th>
  <th><span> <%= link_to book.title, book_path(book.id) %> </span></th>
  <th><span> <%= book.body %></span></th>
</tr>
<% end %>
</tbody>

</table>
</div>
  </div>
 </div>