<div class = "container">
 <div class = "row">

<%= render 'books/list', book: @book, user: @user %>
  <div class = "col-md-8 offset-md-1">

<h1>Books</h1>
<table class="table">
 <thead>
   <tr>
     <th scope="col"></th><th scope="col">Title</th><th scope="col">Opinion</th>
   </tr>
 </thead>

<% @books.each do |book| %>
<tr>
 <td><span><%= link_to attachment_image_tag(@user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg"), user_path(@user.id) %></span></td>
 <td><span> <%= link_to book.title, book_path(book.id) %> </span></td>
 <td><span> <%= book.body %></span></td>
</tr>
<% end %>

</table>
  </div>
 </div>
</div>